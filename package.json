{
  "name": "nextgen-logistics",
  "version": "1.0.0",
  "description": "Modern logistics platform based on proven АвтоГОСТ business model",
  "main": "dist/js/app.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:css\" \"npm run serve\"",
    "build": "npm run build:ts && npm run build:css && npm run optimize",
    "build:ts": "tsc",
    "build:css": "postcss src/styles/main.css -o dist/css/styles.css",
    "watch:ts": "tsc --watch",
    "watch:css": "postcss src/styles/main.css -o dist/css/styles.css --watch",
    "serve": "live-server dist --port=3000 --open=/index.html",
    "optimize": "npm run optimize:images && npm run optimize:js",
    "optimize:images": "imagemin src/images/* --out-dir=dist/images",
    "optimize:js": "terser dist/js/*.js --compress --mangle --output dist/js/app.min.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.{ts,css,html}",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html"
  },
  "keywords": [
    "logistics",
    "freight",
    "transportation",
    "typescript",
    "pwa",
    "b2b"
  ],
  "author": "NextGen Logistics Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.50.0",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "terser": "^5.20.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}